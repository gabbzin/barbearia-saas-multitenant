// ========================================================
// PRISMA SCHEMA
// ========================================================

// Learn more about Prisma: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

// ========================================================
// ENUMS
// ========================================================

// Subscription Status Enum
enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  INCOMPLETE
}

// User Role Enum
enum userRole {
  CLIENT
  BARBER
  ADMIN
}

// Booking Status Enum
enum BookingStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
}

// ========================================================
// AUTHENTICATION & USER MODELS
// ========================================================

model User {
  // Basic Info
  id               String   @id @default(uuid())
  name             String
  image            String?
  email            String   @unique
  emailVerified    Boolean  @default(false)
  role             userRole @default(CLIENT)
  passwordHash     String?

  // Stripe Info
  stripeCustomerId String?


  // Relations
  sessions      Session[]
  accounts      Account[]
  bookings      Booking[]
  barberProfile Barber?   @relation("BarberAccount")
  tenantId      String
  subscription Subscription?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@index([identifier])
  @@map("verification")
}

// ========================================================
// BARBERSHOP MODELS
// ========================================================

model Barbershop {
  // Basic Info
  id        String   @id @default(uuid())
  name      String
  address   String
  logo      String   @default("https://3tlh7aktl6.ufs.sh/f/tcFRjMXVSkQ0Asb1IxZDwZ30bIph8P2qjXfOcVJmTvFtnMxi")

  // Relations
  barbers  Barber[]
  services BarberService[]
  plan    Plan[]
  bookings Booking[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Barber {
  // Basic Info
  id       String   @id @default(uuid())
  imageUrl String   @default("https://3tlh7aktl6.ufs.sh/f/tcFRjMXVSkQ0Asb1IxZDwZ30bIph8P2qjXfOcVJmTvFtnMxi")
  phone    String

  // Relations
  userId String @unique
  user   User   @relation("BarberAccount", fields: [userId], references: [id])

  tenantId String
  tenant   Barbershop @relation(fields: [tenantId], references: [id])
  
  services BarberService[]
  bookings Booking[]

  disponibility BarberDisponibility[]
  exceptionDates ExceptionDate[]

  @@index([userId])
}

model BarberService {
  // Basic Info
  id           String @id @default(uuid())
  name         String
  description  String
  imageUrl     String
  priceInCents Int

  // Relations
  barberId String
  barber   Barber @relation(fields: [barberId], references: [id])

  tenantId String
  tenant   Barbershop @relation(fields: [tenantId], references: [id])

  bookings Booking[]

  @@index([barberId])
}

// ========================================================
// SUBSCRIPTION & PLAN MODELS
// ========================================================

model Subscription {
  // Basic Info
  id                   String              @id @default(uuid())

  // Relations
  plan                 Plan?               @relation(fields: [planId], references: [id])
  planId               String?
  
  // Subscription Details
  stripeCustomerId     String?
  stripeSubscriptionId String?             @unique
  status               SubscriptionStatus? @default(INCOMPLETE)
  periodStart          DateTime?
  periodEnd            DateTime?
  trialStart           DateTime?
  trialEnd             DateTime?
  cancelAtPeriodEnd    Boolean?            @default(false)
  seats                Int?
  userId               String              @unique
  user                 User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, planId])
  @@map("subscription")
}

model Plan {
  // Basic Info
  id            String  @id
  name          String
  description   String
  priceInCents  Int
  stripePriceId String? @unique
  
  // Relations
  tenantId String
  tenant   Barbershop @relation(fields: [tenantId], references: [id])
  subscriptions Subscription[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

// ========================================================
// BOOKING MODEL
// ========================================================

model Booking {
  // Basic Info
  id   String   @id @default(uuid())
  date DateTime @db.Timestamptz

  status       BookingStatus @default(SCHEDULED)
  priceInCents Int

  // Relations
  serviceId    String
  service      BarberService @relation(fields: [serviceId], references: [id])

  // User & Barber & Barbershop
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  barberId String
  barber   Barber @relation(fields: [barberId], references: [id])
  tenantId String
  tenant   Barbershop @relation(fields: [tenantId], references: [id])

  // Subscription (optional)
  userSubscriptionId   String?
  paidWithSubscription Boolean @default(false)

  // Payment
  stripeChargeId String? @unique
  stripeEventId  String? @unique

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  cancelledAt DateTime? @db.Timestamptz

  @@index([userId, tenantId, date, status])
}

// ========================================================
// AVAILABILITY & EXCEPTION MODELS
// ========================================================
model BarberDisponibility {
  // Basic Info
  id      String  @id @default(uuid())
  dayOfWeek Int // 0 = Sunday, 1 = Monday, ..., 6 = Saturday
  startTime  DateTime @db.Time()
  endTime    DateTime @db.Time()

  // Relations
  barberId String 
  barber   Barber @relation(fields: [barberId], references: [id], onDelete: Cascade)

  @@index([barberId, dayOfWeek])
  @@unique([barberId, dayOfWeek, startTime, endTime])
}

model ExceptionDate {
  // Basic Info
  id       String   @id @default(uuid())
  date      DateTime @db.Date()
  isClosed  Boolean  @default(true)
  startTime DateTime? @db.Time()
  endTime   DateTime? @db.Time()

  // Relations
  barberId String
  barber   Barber   @relation(fields: [barberId], references: [id], onDelete: Cascade)


  @@index([barberId, date])
  @@unique([barberId, date])
}